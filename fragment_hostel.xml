<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="website.copyandpaste.bottombarnavigationwithnavigationdrawer.Fragment9">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hostels"
                android:textSize="20dp"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:id="@+id/hostel"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/hostel"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:text="@string/hostel1" />

        </RelativeLayout>
    </ScrollView>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scrollView2"
        android:layout_marginTop="15dp"
        android:id="@+id/layouttable">

        <TableRow
            android:id="@+id/row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/scrollView2"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Chandragupta(Senior Boy’s Hostel)" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="               -350" />

        </TableRow>
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Chanakya ( First Year Boy’s Hostel)" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="               -220" />
        </TableRow>
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Vrindavan (Girl’s Hostel)" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="               -230" />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layouttable">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layouttable"
            android:layout_toEndOf="@+id/scrollView3"
            android:layout_toRightOf="@+id/scrollView3"
            android:text="@string/hostel2" />
    </ScrollView>

</RelativeLayout>